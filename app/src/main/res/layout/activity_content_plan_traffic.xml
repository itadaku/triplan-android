<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/contentPlanTrafficBack"
        android:layout_width="@dimen/content_plan_traffic_back_width"
        android:layout_height="@dimen/content_plan_traffic_back_height"
        android:background="@drawable/ic_back_black"
        android:layout_marginStart="@dimen/content_plan_traffic_back_margin_start"
        android:layout_marginTop="@dimen/content_plan_traffic_back_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contentPlanTrafficRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_plan_traffic_recycler_view_height"
        android:layout_marginTop="@dimen/content_plan_traffic_recycler_view_margin_top"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_content_plan_traffic"/>
</androidx.constraintlayout.widget.ConstraintLayout>