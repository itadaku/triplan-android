<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/settingFeedbackBack"
        android:layout_width="@dimen/content_plan_back_width"
        android:layout_height="@dimen/content_plan_back_height"
        android:background="@drawable/ic_back_black"
        android:layout_marginStart="17dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/settingFeedbackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不具合報告"
        android:textSize="30sp"
        android:textColor="@color/triplan_black"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toEndOf="@id/settingFeedbackBack"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/settingFeedbackText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:layout_marginHorizontal="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingFeedbackTitle"/>
    <Button
        android:id="@+id/settingFeedbackButton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="送信"
        android:textSize="25dp"
        android:textColor="@color/triplan_white"
        android:background="@color/triplan_blue"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>