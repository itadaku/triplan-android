<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="15dp"
    >
    <TextView
        android:id="@+id/itemNowScheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="お昼"
        android:textSize="21sp"
        android:textColor="@color/triplan_black"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/itemNowScheduleFromTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="00:00:00"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemNowScheduleTitle"
    />
    <TextView
        android:id="@+id/itemNowScheduleBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="afasfs"
        android:textSize="16sp"
        android:textColor="@color/triplan_black"
        android:background="@drawable/background_now_schedule_body"
        android:paddingStart="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/itemNowScheduleFromTimeText"
        app:layout_constraintTop_toBottomOf="@id/itemNowScheduleFromTimeText" />

    <TextView
        android:id="@+id/itemNowScheduleToTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="00:00:00"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/itemNowScheduleFromTimeText"
        app:layout_constraintTop_toBottomOf="@id/itemNowScheduleBodyText"
        />

</androidx.constraintlayout.widget.ConstraintLayout>