<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/suggest_inner_background"
    android:elevation="5dp"
    android:layout_marginHorizontal="13dp"
    android:layout_marginBottom="15dp"
    android:paddingBottom="14dp">

    <ImageView
        android:id="@+id/reviewIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/triplan_black"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/reviewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@sample/review.json/data/comment"
        android:textSize="18sp"
        android:textColor="@color/triplan_black"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewIcon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>