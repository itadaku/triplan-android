<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/suggest_inner_background"
    android:elevation="@dimen/review_elevation"
    android:layout_marginHorizontal="@dimen/review_margin_horizontal"
    android:layout_marginBottom="@dimen/review_margin_bottom"
    android:paddingBottom="@dimen/review_padding_bottom">

    <ImageView
        android:id="@+id/reviewIcon"
        android:layout_width="@dimen/review_icon_layout_width"
        android:layout_height="@dimen/review_icon_layout_height"
        android:background="@color/triplan_black"
        android:layout_marginStart="@dimen/review_icon_margin_start"
        android:layout_marginTop="@dimen/review_icon_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/reviewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@sample/review.json/data/comment"
        android:textSize="@dimen/review_comment_text_size"
        android:textColor="@color/triplan_black"
        android:layout_marginStart="@dimen/review_comment_margin_start"
        android:layout_marginEnd="@dimen/review_comment_margin_end"
        android:layout_marginTop="@dimen/review_comment_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewIcon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>